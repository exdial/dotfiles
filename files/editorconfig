# editorconfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
mac_line_length = 120

# 2 space indentation
[*.{hcl,tf,md,yml,sh}]
indent_style = space
indent_size = 2

[*.{md,sh}]
max_line_length = 80

# Tab indentation
[Makefile]
indent_style = tab

# 4 space indentation
[*.{rb,pp}]
indent_style = space
indent_size = 4
max_line_length = 120
